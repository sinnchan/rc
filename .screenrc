# =============== #
# title bar の名前が変わってしまう場合
# " :defdynamictitle off " を実行すること。
# =============== #

# vimとかlessとかtigとかのバッファを終了時にちゃんと消す
altscreen on

# 文字コード
defutf8 on
defencoding utf8
encoding utf8 utf8

# スクロール行数
defscrollback 10000

# マウススクロール有効
termcapinfo xterm* ti@:te@

# 画面に一つのバー
caption splitonly "%{= mk} %?%F%{b kw}%:%{mk}%? %?%h%:%t (screen #%n)%? %{-}"

# 一番下のバー
hardstatus alwayslastline "%{= mk} %-w%{b kw} %n %t* %{-}%+w %= LoadAVG [%l] "

defdynamictitle off

# そのた（バーも含む）
sorendition "= mk"

# 移動
bind h focus left
bind j focus down
bind k focus up
bind l focus right

# Resize window
bind w eval 'command -c resize' 'echo "Resize window"'
bind ^w eval 'command -c resize' 'echo "Resize window"'
bind -c resize h eval 'command -c resize' 'resize -h -1'
bind -c resize l eval 'command -c resize' 'resize -h +1'
bind -c resize j eval 'command -c resize' 'resize -v -1'
bind -c resize k eval 'command -c resize' 'resize -v +1'
bind -c resize ^h eval 'command -c resize' 'resize -h -1'
bind -c resize ^l eval 'command -c resize' 'resize -h +1'
bind -c resize ^j eval 'command -c resize' 'resize -v -1'
bind -c resize ^k eval 'command -c resize' 'resize -v +1'
